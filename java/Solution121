class Solution121 {
    public int maxProfit(int[] prices) {
        int leastValue = Integer.MAX_VALUE;
        int orignalProfit = 0;
        int profitIfSold = 0;
        
        for(int i = 0; i < prices.length; i++){
            if(prices[i] < leastValue){
                leastValue = prices[i];
            }
            profitIfSold = prices[i] - leastValue;
            if(orignalProfit < profitIfSold){
                orignalProfit = profitIfSold;
            }
        }
        return orignalProfit;
    }
}
